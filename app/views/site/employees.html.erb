<div id="controller-div" ng-controller="PersonTableController" config-url="employee" class="container-fluid">
  <div class="row-fluid">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div id="help-message" class="jumbotron">
        <p>Here you can manage the employees that you have.</p>
      </div>

      <p ng-hide="isCreating">
        <a ng-click="showPersonForm(false)" id="create-employee-btn" class="btn btn-success"><i class="fa fa-plus"></i> Create Employee</a>
      </p>

      <form ng-show="isCreating" role="form">
        <div class="form-group">
          <label for="new-employee-first-name">First Name</label>
          <input ng-model="newPerson.first_name" type="text" class="form-control" id="new-employee-first-name" placeholder="Jane">
        </div>
        <div class="form-group">
          <label for="new-employee-last-name">Last Name</label>
          <input ng-model="newPerson.last_name" type="text" class="form-control" id="new-employee-last-name" placeholder="Doe">
        </div>
        <button ng-hide="editing" ng-click="createPerson()" class="btn btn-success" type="submit"><i class="fa fa-plus"></i> Create</button>
        <button ng-show="editing" ng-click="editPerson()" class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Save</button>
        <a ng-click="toggleCreating()" class="btn btn-default">Back</a>
      </form>

      <table ng-hide="isCreating" ng-init="loadTable()" class="table table-bordered">
        <thead>
          <tr>
            <td></td>
            <td>First Name</td>
            <td>Last Name</td>
          </tr>
        </thead>
        <tbody ng-repeat="person in persons">
          <tr>
            <td>
              <a ng-click="delete(person)" class="btn btn-xs btn-danger"><i class="fa fa-remove"></i></a>
              <a ng-click="showPersonForm(person)" class="btn btn-xs btn-primary"><i class="fa fa-edit"></i></a>
            </td>
            <td>{{person.first_name}}</td>
            <td>{{person.last_name}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
