<div id="content" class="container-fluid">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" ng-controller="ScheduleController">

    <div id="date-picker" class="text-center">
      <a ng-click="changeDay(-1)" class="btn btn-xs btn-primary">Previous <i class="fa fa-arrow-left"></i></a>
      <span>{{date}}</span>
      <a ng-click="changeDay(1)" class="btn btn-xs btn-primary">Next <i class="fa fa-arrow-right"></i></a>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <td>
            <a href="#" ng-click="toggleSort('firstName')">
              First Name <span ng-show="orderByField == 'firstName'">
                <i ng-show="descend" class="fa fa-chevron-down"></i>
                <i ng-show="!descend" class="fa fa-chevron-up"></i>
              </span>
            </a>
          </td>
          <td>
            <a href="#" ng-click="toggleSort('lastName')">
              Last Name <span ng-show="orderByField == 'lastName'">
                <i ng-show="descend" class="fa fa-chevron-down"></i>
                <i ng-show="!descend" class="fa fa-chevron-up"></i>
              </span>
            </a>
          </td>
          <td>
            <a href="#" ng-click="toggleSort('phone')">
              Phone <span ng-show="orderByField == 'phone'">
                <i ng-show="descend" class="fa fa-chevron-down"></i>
                <i ng-show="!descend" class="fa fa-chevron-up"></i>
              </span>
            </a>
          </td>
          <td>
            <a href="#" ng-click="toggleSort('date')">
              Time <span ng-show="orderByField == 'date'">
                <i ng-show="descend" class="fa fa-chevron-down"></i>
                <i ng-show="!descend" class="fa fa-chevron-up"></i>
              </span>
            </a>
          </td>
          <td>
            <a href="#" ng-click="toggleSort('employee')">
              Employee <span ng-show="orderByField == 'employee'">
                <i ng-show="descend" class="fa fa-chevron-down"></i>
                <i ng-show="!descend" class="fa fa-chevron-up"></i>
              </span>
            </a>
          </td>
          <td>
            <a href="#" ng-click="toggleSort('service')">
              Services <span ng-show="orderByField == 'service'">
                <i ng-show="descend" class="fa fa-chevron-down"></i>
                <i ng-show="!descend" class="fa fa-chevron-up"></i>
              </span>
            </a>
          </td>
        </tr>
      </thead>
      <tbody ng-init="fillTable()">
        <tr ng-repeat="schedule in data|orderBy:orderByField:!descend">
          <td>{{schedule.customer.first_name}}</td>
          <td>{{schedule.customer.last_name}}</td>
          <td>{{schedule.customer.phone_number}}</td>
          <td>{{schedule.date}}</td>
          <td>{{schedule.employee.first_name}} {{schedule.employee.last_name}}</td>
          <td>{{schedule.service}}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
